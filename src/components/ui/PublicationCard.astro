---
// PublicationCard UI component
// Composed from the generic Card container and used for PDF previews.

import Card from './Card.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  pdfUrl?: string;
  course?: string;
  authors?: string;
  description?: string;
  date?: string;
  copyright?: boolean;
}

const {
  title,
  pdfUrl,
  course,
  authors,
  description,
  date,
  copyright,
} = Astro.props;
---

<button
  type="button"
  class="w-full h-full text-left"
  data-pdf-load
  data-pdf-url={pdfUrl}
  data-pdf-title={title}
  data-pdf-course={course}
  data-pdf-authors={authors}
  data-pdf-description={description}
  data-pdf-date={date}
>
  <Card>
    <div class="flex items-start justify-between gap-2 py-1">
      <span class="block text-[0.72rem] font-medium leading-snug text-[color:var(--text-main)]">
        {title}
      </span>
      {copyright && (
        <span class="shrink-0 text-[0.6rem] leading-none text-[color:var(--text-muted)]">
          <Icon name="copyright" class="h-3 w-3" />
        </span>
      )}
    </div>
  </Card>
</button>
