---
import GlobalShell from '../../components/layouts/GlobalShell.astro';
import AppHead from '../_app-head.astro';
import ExperiencesSubnav from '../../components/layouts/ExperiencesSubnav.astro';
import ExperienceCard from '../../components/ui/ExperienceCard.astro';
import { professionalExperiences } from '../../data/professionalExperiences';
---

<html lang="en">
  <head>
    <AppHead />
  </head>
  <body>
    <GlobalShell>
      <div class="flex flex-1 min-h-0 flex-col">
        <ExperiencesSubnav />
        <div class="relative flex-1 min-h-0">
          <div class="pointer-events-none absolute inset-x-0 top-0 z-10 h-10 bg-gradient-to-b from-[color:var(--bg-app)] to-transparent"></div>
          <div class="pointer-events-none absolute inset-x-0 bottom-0 z-10 h-10 bg-gradient-to-t from-[color:var(--bg-app)] to-transparent"></div>

          <section class="scroll-y-area mx-auto flex h-full w-full max-w-4xl flex-col gap-6 px-6 pt-4 md:px-8 md:pt-6">
            <div class="relative">
              <div class="absolute left-[1.25rem] top-0 bottom-0 border-l-2 border-purple-500/70"></div>

              <div class="space-y-6 pb-8">
                {professionalExperiences.map((exp) => (
                  <div class="relative flex gap-6">
                    <div class="flex w-10 items-center justify-center">
                      <div class="relative">
                        <span class="inline-flex h-4 w-4 items-center justify-center rounded-full border-2 border-purple-400 bg-[color:var(--bg-app)] shadow-sm shadow-purple-500/40"></span>
                      </div>
                    </div>

                    <div class="flex-1">
                      <ExperienceCard
                        title={exp.title}
                        role={exp.role}
                        dates={exp.dates}
                        type={exp.type}
                        description={exp.description}
                        skills={exp.skills}
                        location={exp.location}
                        logo={exp.logo}
                        subroles={exp.subroles}
                        contributors={exp.contributors}
                        links={exp.links}
                      />
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>
        </div>
      </div>
    </GlobalShell>
  </body>
</html>
