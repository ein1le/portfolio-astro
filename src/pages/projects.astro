---
// Projects page
// Renders projects from data/projects.ts using the ProjectsCard UI.

import GlobalShell from '../components/layouts/GlobalShell.astro';
import { ProjectsCard } from '../components/ui';
import { projects } from '../data/projects';
---

<GlobalShell>
  <section class="mx-auto flex max-w-6xl flex-col gap-6 px-4 pt-6 md:px-0 md:pt-8">
    <div class="grid gap-4 md:grid-cols-3">
      {projects.map((project) => (
        <ProjectsCard
          title={project.title}
          description={project.description}
          languages={project.languages}
          contributors={project.contributors}
          image={project.image}
        />
      ))}
    </div>
  </section>
</GlobalShell>
