---
// Education page
// TODO: Import real education data and render within the global layout shell

import GlobalShell from '../components/layouts/GlobalShell.astro';
import { EducationCard } from '../components/ui';
import { educationEntries } from '../data/education';
---

<GlobalShell>
  <section class="mx-auto flex max-w-4xl flex-col gap-4 px-4 pt-6 md:px-0 md:pt-8">
    {educationEntries.map((entry, index) => (
      <div class="edu-card" style={`animation-delay: ${index * 90}ms;`}>
        <EducationCard
          title={entry.subheader}
          institution={entry.title}
          period={entry.date}
          location={entry.location}
          description={entry.grade}
          image={entry.image}
          details={entry.details}
        />
      </div>
    ))}
  </section>
</GlobalShell>

 
